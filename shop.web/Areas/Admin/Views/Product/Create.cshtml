@model Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Create Product</h1>

<form asp-controller="Product" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">

            <div class="form-group">
                <label asp-for="Name" name="Name" class="control-label"></label>
                <input asp-for="Name" name="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" name="BrandId" class="control-label"></label>
                <select asp-for="BrandId" name="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" name="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" name="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>


            <p>Gender</p>


            <div class="form-check form-check-inline">

                <label class="form-check-label"><input class="form-check-input" type="radio" value="@Gender.Male" name="Gender" asp-for="Gender">@Gender.Male</label>

            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label"><input class="form-check-input" type="radio" value="@Gender.Female" name="Gender" asp-for="Gender">@Gender.Female</label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label"><input class="form-check-input" type="radio" value="@Gender.Unisex" name="Gender" asp-for="Gender">@Gender.Unisex</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
            <br />
            <br />
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="@Sizes.Small" name="AvailableSizes" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Small</label>

                </div>
                <div class="form-check form-check-inline ps-5">
                    <input class="form-check-input" type="radio" value="@Sizes.Large" name="AvailableSizes" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Large</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" value="@Sizes.ExtraExtraLarge" name="AvailableSizes" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Extra Extra Large</label>
                </div>
            </div>

            <div class="form-check form-check-inline pe-1">
                <input class="form-check-input" type="radio" value="@Sizes.Medium" name="AvailableSizes" asp-for="AvailableSizes">
                <label class="form-check-label" asp-for="AvailableSizes">Medium</label>
            </div>
            <div class="form-check form-check-inline ps-4">
                <input class="form-check-input" type="radio" value="@Sizes.ExtraLarge" name="AvailableSizes" asp-for="AvailableSizes">
                <label class="form-check-label" asp-for="AvailableSizes">Extra Large</label>
            </div>
            @* <span asp-validation-for="AvailableSizes" class="text-danger"></span>*@
            <br />
            <br>

            <input class="form-control" type="date" asp-for="InsertDate" placeholder="Select date" />
        </div>

        <div class="col-6 mb-3">
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}