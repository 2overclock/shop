@model Product

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Create Product</h1>

<form asp-controller="Product" method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-6 mb-3">

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>


            <p>Gender</p>
            <div class="form-check form-check-inline">

                <input class="form-check-input" type="checkbox" value="Male" name="Male" asp-for="Gender">
                <label class="form-check-label" asp-for="Gender">Male</label>

            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="Female" name="Female" asp-for="Gender">
                <label class="form-check-label" asp-for="Gender">Female</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="Unisex" name="Unisex" asp-for="Gender">
                <label class="form-check-label" asp-for="Gender">Unisex</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
            <br />
            <br />
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="Small" name="Small" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Small</label>

                </div>
                <div class="form-check form-check-inline ps-5">
                    <input class="form-check-input" type="checkbox" value="Large" name="Large" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Large</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" value="Extra Extra Large" name="Extra Extra Large" asp-for="AvailableSizes">
                    <label class="form-check-label" asp-for="AvailableSizes">Extra Extra Large</label>
                </div>
            </div>

            <div class="form-check form-check-inline pe-1">
                <input class="form-check-input" type="checkbox" value="Medium" name="Medium" asp-for="AvailableSizes">
                <label class="form-check-label" asp-for="AvailableSizes">Medium</label>
            </div>
            <div class="form-check form-check-inline ps-4">
                <input class="form-check-input" type="checkbox" value="Extra Large" name="Extra Large" asp-for="AvailableSizes">
                <label class="form-check-label" asp-for="AvailableSizes">Extra Large</label>
            </div>
            @* <span asp-validation-for="AvailableSizes" class="text-danger"></span>*@
            <br />
            <br>

            <input class="form-control" type="date" asp-for="InsertDate" placeholder="Select date" />
        </div>

        <div class="col-6 mb-3">
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-success">Back to list</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}